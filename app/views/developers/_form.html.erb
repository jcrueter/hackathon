<%= form_for @developer do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :trait %>
  <%= f.text_field :trait %>

  <%= f.label :skills %>
  <%= f.text_field :skills %>

  <%= f.label :country_id %>
  <%= f.collection_select(:country_id, Country.all, :id, :name) %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit (@developer.new_record? ? "Create" : "Update") %>

<% end %>
